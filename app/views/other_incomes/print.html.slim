#customer
  table#meta
    tr
      td.meta-head Jenis
      td
        textarea 
          | Biaya Pemasukkan Lainnya
    tr 
      td.meta-head Tanggal Dibuat
      td
        textarea #{DateTime.now.strftime("%d/%m/%Y")}
    tr
      td.meta-head Toko 
      td
        - if @store.present?
          textarea #{@store.name}
        - else
          textarea Semua Toko
   
    tr
      td.meta-head Kriteria
      td
        b  
          | #{@search}


table#items
  tr colspan="5"

  tr
    th Nomor Invoice
    th Tanggal
    th Nominal
    th Keterangan

  - @other_incomes.each do |other_income|
    tr.operational-row
      td #{other_income.invoice}
      td #{other_income.date.strftime("%d/%m/%Y")}
      td #{other_income.nominal}
      td #{other_income.description}
